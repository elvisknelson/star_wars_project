<h1 class="mb-5 row mr-0 ml-0 justify-content-center">Species</h1>
<div class="row mr-0 ml-0 justify-content-center">
  <div class="col-8">
    <table id="fullTable" class="table table-striped table-dark table-hover">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Classification</th>
        <th scope="col">Designation</th>
        <th scope="col">Average Height</th>
      </tr>
      <% @species.each do |spec| %>
      <tr>
        <th scope="row mr-0 ml-0"><%= spec.id %></th>
        <th><%= link_to spec.name, species_url(spec), class: "nav-link text-white" %></th>
        <th><%= link_to spec.classification.capitalize(), species_url(spec), class: "nav-link text-white" %></th>
        <th><%= link_to spec.designation.capitalize(), species_url(spec), class: "nav-link text-white" %></th>
        <th><%= link_to spec.average_height, species_url(spec), class: "nav-link text-white"  %></th>
      </tr>
      <% end %>
    </table>
    <div class="flickr_pagination">
      <%= will_paginate @species, :container => false %>
    </div>
  </div>
</div>