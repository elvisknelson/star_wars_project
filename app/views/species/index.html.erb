<div class="row justify-content-center">
  <div class="col-8">
    <table id="fullTable" class="table table-striped table-dark table-hover">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
      </tr>
      <% @species.each do |spec| %>
      <tr>
        <th scope="row"><%= spec.id %></th>
        <th><%= link_to spec.name, species_url(spec), class: "nav-link" %></th>
      </tr>
      <% end %>
    </table>
    <div class="flickr_pagination">
      <%= will_paginate @characters, :container => false %>
    </div>
  </div>
</div>