<div class="row justify-content-center">
  <div class="col-8">
    <table id="fullTable" class="table table-striped table-dark table-hover">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Rotation Period</th>
        <th scope="col">Climate</th>
      </tr>
      <% @homeworlds.each do |world| %>
      <tr>
        <th scope="row"><%= world.id %></th>
        <th><%= link_to world.name, homeworld_path(world.id), class: "nav-link" %></th>
        <th><%= world.rotation_period %></th>
        <th><%= world.climate.capitalize() %></th>
      </tr>
      <% end %>
    </table>
    <div class="flickr_pagination">
      <%= will_paginate @characters, :container => false %>
    </div>
  </div>
</div>